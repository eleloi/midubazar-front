---
interface Props {
  rating: number
}

const { rating } = Astro.props
---

<meter
  class="average-rating"
  min="0"
  max="5"
  value={rating}
  title={`${rating} out of 5 stars`}>{rating} out of 5</meter
>
<style define:vars={{ rating }}>
  .average-rating {
    position: relative;
    appearance: none;
    color: transparent;
    width: auto;
    display: inline-block;
    vertical-align: baseline;
    font-size: 1.7rem;
  }

  .average-rating::before {
    --percent: calc(var(--rating) / 5 * 100%);
    content: "★★★★★";
    position: absolute;
    top: 0;
    left: 0;
    color: rgba(0, 0, 0, 0.2);
    background: linear-gradient(
      90deg,
      gold var(--percent),
      rgba(0, 0, 0, 0.2) var(--percent)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>

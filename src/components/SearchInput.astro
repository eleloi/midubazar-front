---
import SearchIcon from "../icons/search.svg"

interface Props {
  value: string | null
}

const { value } = Astro.props
---

<form class="search-container" action="/items" method="get">
  <div class="input-container">
    <img src={SearchIcon.src} alt="Search" />
    <input
      value={value}
      name="search"
      type="text"
      placeholder="laptops, smartphones, ..."
    />
  </div>
  <slot />
</form>

<style>
  .search-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    max-width: 300px;
  }

  .input-container {
    position: relative;
    width: 100%;
  }

  img {
    position: absolute;
    top: 50%;
    right: 1rem;
    transform: translateY(-50%);
    width: 1.5rem;
    height: 1.5rem;
    fill: var(--color-text);
    opacity: 0.5;
  }

  input {
    padding: 0.5rem 1rem;
    background: var(--color-input);
    width: 100%;
  }
</style>

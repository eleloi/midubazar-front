---
interface Props {
  title: string
}

const { title } = Astro.props
import Layout from "./Layout.astro"
---

<Layout title={title}>
  <div class="container">
    <slot name="header" />
    <slot name="tags" />
    <main><slot name="main" /></main>
    <slot name="footer" />
  </div>
</Layout>

<style>
  .container {
    height: 100%;
    display: grid;
    grid-template-rows: min-content min-content 1fr min-content;
    grid-template-columns: 1fr;
    justify-items: center;
    gap: 2rem;
    overflow-y: auto;
  }
</style>

---
import Layout from "../layouts/Layout.astro"

import FoodTruck from "../icons/food-truck.svg"
import SearchInput from "../components/SearchInput.astro"
---

<Layout title="Bazar online">
  <div class="container">
    <header>
      <img width="100" height="100" src={FoodTruck.src} alt="Food truck" />
      <h1>Bazar Online</h1>
    </header>

    <main>
      <SearchInput>
        <button class="submit-button" type="submit"> Buscar</button>
      </SearchInput>
    </main>
  </div>
</Layout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    gap: 1rem;
  }

  header {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  header h1 {
    font-weight: 700;
    font-size: 2rem;
  }

  .submit-button {
    border-radius: 9999px;
    background-color: var(--color-primary);
    padding: 0.1rem 0.5rem;
    font-size: 1.3rem;
    box-shadow: 1px 2px 4px var(--color-shadow);
  }

  .submit-button:hover {
    background-color: var(--color-primary-active);
  }

  .submit-button:active {
    background-color: var(--color-primary-active);
    box-shadow: none;
    transform: translate(1px, 1px);
  }
</style>
